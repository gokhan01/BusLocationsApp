@{
    Layout = null;
}

@model IEnumerable<JourneysViewModel>

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Journey</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/datepicker/datepicker.min.css" rel="stylesheet" />
    <link href="~/css/pages/journey.css" rel="stylesheet" asp-append-version="true" />
</head>
<body class="bg-light">

    <div class="centered-div">
        <div class="card-header text-light text-center py-3">
            <a class="arrow-href" href="/"><i class="bi bi-arrow-left"></i></a>
            <strong>@ViewBag.OriginLocation - @ViewBag.DestinationLocation</strong>
            <p class="mb-0">@ViewBag.DepartureDate</p>
        </div>
        <div class="card-body">
            @foreach (var item in Model)
            {
                <div class="card p-2 m-2">
                    <div class="row mb-2">
                        <div class="col">
                            <div class="text-center">
                                <div class="time-box">
                                    <div>
                                        <div class="label">Kalkış</div>
                                        <div class="time">@item.Departure</div>
                                    </div>
                                    <div class="arrow">→</div>
                                    <div>
                                        <div class="label">Varış</div>
                                        <div class="time">@item.Arrival</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col d-flex flex-row-reverse">
                            <button class="btn btn-sm btn-danger float-right">@item.OriginalPrice @item.Currency</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col d-flex align-items-center">
                            <span>@item.Origin - @item.Destination</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
